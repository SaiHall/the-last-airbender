
<% @characters.each do |character| %>
<div class="character">
  <% if !character.photo.nil? %>
    <img src="<%= character.photo %>">
  <% end %>
  <h4><%= character.name %><h4>
  <p>Allies:</p>
  <% character.allies.each do |ally| %>
    <li><%= ally %></li>
  <% end %>
  <p>Enemies:</p>
  <% character.enemies.each do |enemy| %>
    <li><%= enemy %></li>
  <% end %>
  <p>Affiliations: <%= character.affiliations %></p>
</div>
<% end %>
